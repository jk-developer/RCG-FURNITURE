<% include partials/header %>

<h1>sign up </h1>

<form action="/index" method="POST">
  <div class="form-row">
      <div class="form-group">
    <label for="inputUsername" class="col-form-label">Username</label>
    <input type="text" name = "user[username]" class="form-control" id="inputUsername" placeholder="Username">
  </div>
      
    <div class="form-group">
      <label for="inputEmail4" class="col-form-label">Email</label>
      <input type="email" name = "user[email]" class="form-control" id="inputEmail4" placeholder="Email">
    </div>
    <div class="form-group">
      <label for="inputPassword4" class="col-form-label">Password</label>
      <input type="password" name = "user[password]" class="form-control" id="inputPassword4" placeholder="Password">
    </div>
  </div>
  
  
  <div class="form-group">
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="checkbox"> Remember me 
      </label>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Sign in</button>
</form>


